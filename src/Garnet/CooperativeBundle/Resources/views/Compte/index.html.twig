{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Compte list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomuser</th>
                <th>Prenom</th>
                <th>Datenaissance</th>
                <th>Courriel</th>
                <th>Telephone</th>
                <th>Motdepasse</th>
                <th>Dateinscription</th>
                <th>Adresse</th>
                <th>Supprime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('compte_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomUser }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{% if entity.dateNaissance %}{{ entity.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.courriel }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.motdePasse }}</td>
                <td>{% if entity.dateInscription %}{{ entity.dateInscription|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.supprime }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('compte_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('compte_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('compte_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
