{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Messages list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idsrc</th>
                <th>Iddst</th>
                <th>Message</th>
                <th>Supprimedst</th>
                <th>Supprimesrc</th>
                <th>Lu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('messages_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idSrc }}</td>
                <td>{{ entity.idDst }}</td>
                <td>{{ entity.message }}</td>
                <td>{{ entity.supprimeDst }}</td>
                <td>{{ entity.supprimeSrc }}</td>
                <td>{{ entity.lu }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('messages_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('messages_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('messages_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
